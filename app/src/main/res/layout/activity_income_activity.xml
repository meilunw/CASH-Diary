<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Income_activity">

    <TextView
        android:id="@+id/title2"
        android:layout_width="112dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="240dp"
        android:text="Income Details" />

    <TextView
        android:id="@+id/title1"
        android:layout_width="112dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="12dp"
        android:text="New Income" />

    <View
        android:id="@+id/New-Income-Info"
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="44dp" />

    <EditText
        android:id="@+id/Money"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:gravity="left"
        android:hint="Amount"
        android:inputType="number|numberDecimal"
        android:selectAllOnFocus="true" />

    <EditText
        android:id="@+id/Date"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_toEndOf="@+id/Money"
        android:layout_toRightOf="@+id/Money"
        android:ems="10"
        android:gravity="left"
        android:hint="MM/DD/YY"
        android:inputType="date" />

    <EditText
        android:id="@+id/Comment"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Money"
        android:layout_alignLeft="@+id/Money"
        android:layout_alignEnd="@+id/Date"
        android:layout_alignRight="@+id/Date"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:ems="10"
        android:gravity="left"
        android:hint="Comment"
        android:inputType="text" />

    <TableLayout
        android:id="@+id/Income_Details"
        android:layout_width="match_parent"
        android:layout_height="239dp"
        android:layout_alignEnd="@+id/Money"
        android:layout_alignRight="@+id/Money"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-205dp"
        android:layout_marginRight="-205dp"
        android:layout_marginBottom="0dp"
        android:gravity="top"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

    <Button
        android:id="@+id/Add-New-Income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/New-Income-Info"
        android:layout_alignEnd="@+id/Date"
        android:layout_alignRight="@+id/Date"
        android:text="Add" />

    <Button
        android:id="@+id/Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/title2"
        android:layout_alignLeft="@+id/title2"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="175dp"
        android:text="Cancel" />

</RelativeLayout>